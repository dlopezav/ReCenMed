                                            var miProductTemp = {'id': '<%=data[i].pro_id%>', 'nombre': '<%=data[i].pro_nombre%>', 'cantidad': cantidad, 'precio': '<%=data[i].pro_precio_venta%>', 'cantidadMax': '<%=data[i].pro_cantidad%>'};
