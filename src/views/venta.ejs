                                        var x = document.getElementById('precio_venta_<%= data[i].pro_id %>');
                                        x.textContent = nf.format('<%= data[i].pro_precio_venta%>');
                                    </script>
                                
                                </td>
                                <td><%= data[i].pro_cantidad%></td>
                            </tr>
                        <% } %>
                    <% } else { %>
